<%= form_for(company) do |f| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :population %>
    <%= f.text_field :population %>
  </div>

  <div class="field">
    <%= f.label :category_id %>
    <%= f.collection_select :category_id, Category.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :keywords %>
    <%= f.text_field :keywords %>
  </div>

  <strong>Address information</strong>
  <%= f.fields_for :address do |faddress| %>
    <div class="field">
      <%= faddress.label :country %>
      <%= faddress.text_field :country %>
    </div>

    <div class="field">
      <%= faddress.label :state %>
      <%= faddress.text_field :state %>
    </div>

    <div class="field">
      <%= faddress.label :address_line %>
      <%= faddress.text_area :address_line %>
    </div>

    <div class="field">
      <%= faddress.label :city %>
      <%= faddress.text_field :city %>
    </div>

    <div class="field">
      <%= faddress.label :zip_code %>
      <%= faddress.text_field :zip_code %>
    </div>
  <%end%>

  <div class="field">
    <%= f.label :nearest_city %>
    <%= f.text_field :nearest_city %>
  </div>

  <div class="field">
    <%= f.label :distance, 'Distance from nearest city' %>
    <%= f.text_field :distance %>
  </div>

  <strong>Financial Information </strong>
  <%= f.fields_for :financial_information do |ffinance| %>
    <div class="field">
      <%= ffinance.label :last_reported %>
      <%= ffinance.date_select :last_reported %>
    </div>

    <div class="field">
      <%= ffinance.label :revenue %>
      <%= ffinance.text_field :revenue %>
    </div>

    <div class="field">
      <%= ffinance.label :income %>
      <%= ffinance.text_field :income %>
    </div>
  <%end%>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
